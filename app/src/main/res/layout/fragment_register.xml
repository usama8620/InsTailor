<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="50dp">

        <EditText
            android:id="@+id/register_fragment_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textinputborder"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp" />


        <EditText
            android:id="@+id/register_fragment_number"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/register_fragment_email"
            android:layout_marginTop="20dp"
            android:background="@drawable/textinputborder"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="10dp" />

        <EditText
            android:id="@+id/register_fragment_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/register_fragment_number"
            android:layout_marginTop="20dp"
            android:background="@drawable/textinputborder"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/register_fragment_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/register_fragment_password"
            android:layout_marginTop="20dp"
            android:background="@drawable/textinputborder"
            android:hint="Confirm Password"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingLeft="15dp" />

        <CheckBox
            android:id="@+id/register_fragment_checkbox_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_fragment_confirm_password"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:text="I agree the"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/register_fragment_termsandcondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_fragment_confirm_password"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/register_fragment_checkbox_agreement"
            android:layout_toRightOf="@+id/register_fragment_checkbox_agreement"
            android:clickable="true"
            android:text="Terms of use"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />


        <Button
            android:id="@+id/register_fragment_registeration_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_fragment_termsandcondition"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:clickable="true"
            android:text="Register"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:gravity="center"
        android:text="Already Have an Account?"
        android:textColor="@color/colorAccent"
        android:textSize="12sp" />

    <Button
        android:id="@+id/register_fragment_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/round_button"
        android:text="Login "
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>