<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4.0dp"
    android:layout_marginLeft="8.0dp"
    android:layout_marginRight="8.0dp"
    android:layout_marginTop="4.0dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/allstylesshirt_linearlayout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/round_button_grey"
                android:gravity="center">

                <ImageView
                    android:id="@+id/allstylesshirt_product_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:background="@mipmap/shrt"
                    android:scaleType="fitXY" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/allstylesshirt_layout_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_weight="1.8"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/allstylesshirt_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name "
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/allstylesshirt_item_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item descriptions"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/allstylesshirt_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 8,999"
                    android:textColor="#4CAF50"
                    android:textSize="15dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/allstylesshirt_wishlist_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/heart_blank" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>