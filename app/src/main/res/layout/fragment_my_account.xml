<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="NotSibling">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/my_account_input_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Username"
                    android:textColorHint="@color/grey_400">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/my_account_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="10dp"
                        android:text="User Name"
                        android:textColor="@color/grey_800"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/my_account_linearlayout_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/lay1"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/my_account_profile_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/camera"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Add Image"
                        android:id="@+id/my_account_textview_add_image"
                        android:textColor="@color/black" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layer"
                android:orientation="vertical"
                android:paddingLeft="18dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/my_account_input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Password"
                        android:textColorHint="@color/grey_400">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/my_account_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawablePadding="8dp"
                            android:enabled="false"
                            android:inputType="textPassword"
                            android:paddingLeft="5dp"
                            android:text="********"
                            android:textColor="@color/grey_800"
                            android:textSize="15sp" />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/my_account_change_password"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner"
                        android:gravity="center"
                        android:text="Change Password"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/my_account_input_cnic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="CNIC "
                    android:textColorHint="@color/grey_400">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/my_account_cnic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"
                        android:inputType="number"
                        android:maxLength="13"
                        android:text="352020855555555"
                        android:textColor="@color/grey_800"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/my_account_input_license"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Age "
                    android:textColorHint="@color/grey_400">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/my_account_age"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"
                        android:inputType="number"
                        android:text="12"
                        android:textColor="@color/grey_800"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/my_account_input_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Mobile Number"
                    android:textColorHint="@color/grey_400">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/my_account_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"
                        android:inputType="number"
                        android:text="+923212345678"
                        android:textColor="@color/grey_800"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/my_account_input_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Gender"
                    android:textColorHint="@color/grey_400">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/my_account_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"
                        android:enabled="false"
                        android:text="Male"
                        android:textColor="@color/grey_800"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/my_account_input_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:hint="Address"
                    android:textColorHint="@color/grey_400">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/my_account_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"
                        android:inputType="textPostalAddress"
                        android:text="pgeches"
                        android:textColor="@color/grey_800"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/my_account_input_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:hint="City"
                    android:textColorHint="@color/grey_400">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/my_account_city"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawablePadding="8dp"
                        android:inputType="textPostalAddress"
                        android:text="Lahore"
                        android:textColor="@color/grey_800"
                        android:textColorHint="@color/input_login_hint"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/my_account_button_save_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:text=" Done "
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
